<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"

        android:padding="24dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/rate_app_dialog_title"

            style="@style/TextAppearance.AppCompat.Title"

            android:paddingBottom="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/rate_app_dialog_message"

            style="@style/TextAppearance.AppCompat.Subhead"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"

        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"

        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"

        android:layout_gravity="end"
        android:gravity="end"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/rate_app_dialog_rate_now"

            android:text="@string/rate_app_dialog_rate_now"
            android:textColor="@color/colorAccent"

            style="@style/Widget.AppCompat.Button.Borderless"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/rate_app_dialog_dont_show_again"

            android:text="@string/rate_app_dialog_don_not_show_again"
            android:textColor="@color/colorAccent"

            style="@style/Widget.AppCompat.Button.Borderless"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/rate_app_dialog_remind_me_later"

            android:text="@string/rate_app_dialog_remind_me_later"
            android:textColor="@color/colorAccent"

            style="@style/Widget.AppCompat.Button.Borderless"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>