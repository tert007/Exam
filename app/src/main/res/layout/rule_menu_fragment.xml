<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBlack"

    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rule_description_view"

        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/rule_description_title_view"

            android:drawableTop="@drawable/rule_reading_icon"

            android:drawablePadding="16dp"

            android:gravity="center"

            android:text="@string/rule"
            android:textSize="30sp"
            android:textColor="@color/colorWhite"

            android:layout_width="200dp"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/rule_description_completed_image_view"

            android:src="@drawable/ic_checked"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@+id/rule_description_title_view"
            app:layout_constraintBottom_toBottomOf="@+id/rule_description_title_view"
            app:layout_constraintTop_toTopOf="@+id/rule_description_title_view"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="1dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rule_training_view"

        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/rule_training_title_view"

            android:drawableTop="@drawable/rule_training_icon"
            android:drawablePadding="16dp"

            android:gravity="center"

            android:text="@string/training"
            android:textSize="30sp"
            android:textColor="@color/colorWhite"

            android:layout_width="200dp"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rule_training_completed_image_view"

            android:src="@drawable/ic_unchecked"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@+id/rule_training_title_view"
            app:layout_constraintBottom_toBottomOf="@+id/rule_training_title_view"
            app:layout_constraintTop_toTopOf="@+id/rule_training_title_view"
            android:layout_marginTop="8dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rule_exam_view"

        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/rule_exam_title_view"

            android:drawableTop="@drawable/feather_3_icon"
            android:drawablePadding="16dp"

            android:gravity="center"

            android:text="@string/exam"
            android:textSize="30sp"
            android:textColor="@color/colorWhite"

            android:layout_width="200dp"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/rule_exam_completed_text_view"

            tools:text="4.5"

            android:textSize="12sp"
            android:textColor="@color/colorWhite"

            android:gravity="center"

            android:background="@drawable/shape_completed"

            android:layout_width="24dp"
            android:layout_height="24dp"

            app:layout_constraintBottom_toBottomOf="@+id/rule_exam_title_view"
            app:layout_constraintLeft_toRightOf="@+id/rule_exam_title_view"
            app:layout_constraintTop_toTopOf="@+id/rule_exam_title_view"
            android:layout_marginTop="8dp" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>