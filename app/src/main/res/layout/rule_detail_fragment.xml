<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBlack"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"

        app:cardElevation="16dp"
        app:cardCornerRadius="10dp">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/rule_description_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rule_description_title_view"

            android:drawableTop="@drawable/rule_description_icon"

            android:drawablePadding="16dp"

            android:gravity="center"

            android:text="@string/rule"
            android:textSize="28sp"
            android:textColor="@android:color/black"

            android:layout_width="200dp"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/rule_description_completed_image_view"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_checked"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"

        app:cardElevation="16dp"
        app:cardCornerRadius="10dp">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/rule_training_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rule_training_title_view"

            android:drawableTop="@drawable/rule_training_icon"
            android:drawablePadding="16dp"

            android:gravity="center"

            android:text="@string/training"
            android:textSize="28sp"
            android:textColor="#000"

            android:layout_width="200dp"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rule_training_completed_image_view"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_unchecked"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="16dp"
        app:cardCornerRadius="10dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rule_exam_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rule_exam_title_view"

            android:drawableTop="@drawable/rule_exam_icon"
            android:drawablePadding="16dp"

            android:gravity="center"

            android:text="@string/exam"
            android:textSize="28sp"
            android:textColor="#000"

            android:layout_width="200dp"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/rule_exam_completed_text_view"

            android:layout_width="24dp"

            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"

            android:background="@drawable/shape_completed"

            android:gravity="center"
            android:textColor="@color/colorWhite"

            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="4.65" />
    </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>