<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/score_title_text_view"

        android:text="@string/score"
        android:textSize="26sp"
        android:textColor="?android:textColorPrimary"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/score_text_view"

        tools:text="4.5"
        android:textSize="30sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@+id/score_title_text_view"
        app:layout_constraintRight_toRightOf="@+id/score_title_text_view"
        app:layout_constraintLeft_toLeftOf="@+id/score_title_text_view" />
    
    <TextView
        android:id="@+id/best_score_title_text_view"

        android:text="@string/best_score"
        android:textSize="26sp"
        android:textColor="?android:textColorPrimary"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/best_score_text_view"

        tools:text="5.0"
        android:textSize="30sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@+id/best_score_title_text_view"
        app:layout_constraintRight_toRightOf="@+id/best_score_title_text_view"
        app:layout_constraintLeft_toLeftOf="@+id/best_score_title_text_view" />

</android.support.constraint.ConstraintLayout>