<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="64dp">

    <TextView
        android:id="@+id/correct_word_text_view"
        tools:text="Щука"

        android:textSize="16sp"
        android:textColor="@color/colorGreen"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/incorrect_word__text_view"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/incorrect_word__text_view"

        tools:text="Щюка"

        android:textSize="14sp"
        android:textColor="@color/colorRed"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correct_word_text_view"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>